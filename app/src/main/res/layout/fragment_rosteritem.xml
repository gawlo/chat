<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:id="@+id/id_relative_roster_item">

    <RelativeLayout
        android:id="@+id/contact_avatar_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <com.github.abdularis.civ.StorkAvatarView
                android:id="@+id/contact_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitStart"
                android:src="@drawable/user_avatar"/>
        <ImageView
                android:id="@+id/contact_presence"
                android:layout_width="17sp"
                android:layout_marginRight="3dp"
                android:layout_height="17sp"
                android:layout_marginLeft="-17sp"
                android:src="@drawable/presence_unknown"
                android:layout_alignBottom="@id/contact_avatar"
                android:layout_toRightOf="@id/contact_avatar"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/contact_avatar_frame"
            android:orientation="vertical"
            android:paddingLeft="5dp" android:layout_alignParentEnd="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                    android:id="@+id/contact_display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Contact"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
            />
        </RelativeLayout>
        <TextView
                android:id="@+id/contact_jid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Contact"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="12sp"/>
        <TextView
            android:id="@+id/contact_jid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Contact"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="12sp"/>
    </LinearLayout>
</RelativeLayout>
