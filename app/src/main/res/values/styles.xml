<resources>

    <!-- Components -->

    <style name="CallButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="android:tint">#ffffffff</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="CallButton.Accept">
        <item name="backgroundTint">#24d066</item>
        <item name="android:src">@drawable/ic_call_24dp</item>
    </style>
    <style name="CallButton.Decline">
        <item name="backgroundTint">#e62247</item>
        <item name="android:src">@drawable/ic_call_end_24dp</item>
    </style>

    <style name="ConnectionStatus">
    </style>

    <style name="ConnectionStatus.Disconnected">
        <item name="android:textColor">#64B5F6</item>
        <item name="android:text">Disconnected</item>
    </style>
    <style name="ConnectionStatus.Connected">
        <item name="android:textColor">#81C784</item>
        <item name="android:text">Connected</item>
    </style>
    <style name="ConnectionStatus.Connecting">
        <item name="android:textColor">#FFF176</item>
        <item name="android:text">Connecting...</item>
    </style>
    <style name="ConnectionStatus.Disconnecting">
        <item name="android:textColor">#FFF176</item>
        <item name="android:text">Disconnecting...</item>
    </style>

    <style name="TextAppearance.Stork.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.Stork.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorLink">?android:textColorPrimary</item>
    </style>



</resources>
